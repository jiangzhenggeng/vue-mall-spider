{
  "name": "vue-mall-spider",
  "version": "0.1.0",
  "description": "vue-mall-spider手动抓取电商商品!.",
  "manifest_version": 2,
  "icons": {
    "16": "images/icons/16.png",
    "48": "images/icons/48.png",
    "128": "images/icons/128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icons/16-gray.png",
      "48": "images/icons/48-gray.png",
      "128": "images/icons/128-gray.png"
    },
    "default_title": "vue-mall-spider",
    "default_popup": "popups/list-product.html"
  },
  "options_page": "options-setting.html",
  "web_accessible_resources": ["*"],
  "background": {
    "page":"spider-background.html",
    "persistent": false
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "unlimitedStorage",
    "notifications",
    "contextMenus",
    "tabs",
    "<all_urls>",
    "activeTab",
    "file:///*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.tmall.com/*",
        "*://*.tmall.hk/*",
        "*://*.jd.com/*",
        "*://*.taobao.com/*",
        "*://*.amazon.cn/*",
        "*://*.amazon.com/*",
        "*://*.suning.com/*",
        "*://*.kaola.com/*",
        "*://*.yhd.com/*",
        "*://*.gome.com.cn/*",
        "*://*.dangdang.com/*",
        "*://*.gome.com/*",
        "*://*.163.com/*",
        "*://*.ujipin.com/*",
        "*://*.xiji.com/*",
        "*://*.yougou.com/*"
      ],
      "js": [
        "script/libs/vue.min.js",
        "script/libs/jquery-2.2.3.js",
        "script/libs/jquery.qrcode.min.js",
        "script/libs/store.js",
        "script/extend.js",
        "script/config/url.config.js",
        "script/main.js"
      ],
      "css":[
        "style/base.css",
        "style/model.css"
      ]
    }
  ]
}
